{
  "name": "@elevnn/store",
  "version": "0.0.1",
  "description": "Elevnn Store wordpress site",
  "main": "README.md",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "docker-compose -f wordpress/docker-compose.yml build",
    "prod": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.prod.yml up",
    "prod:detached": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.prod.yml down",
    "prod:destroy-volumes": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.prod.yml down -v",
    "dev": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.dev.yml up",
    "dev:detached": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.dev.yml up -d",
    "dev:down": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.dev.yml down",
    "dev:destroy-volumes": "docker-compose -f wordpress/docker-compose.yml -f wordpress/docker-compose.dev.yml down -v",
    "wordmove:bash": "docker exec -it elevnn_wordmove bash",
    "wordmove:pull-staging:database": "docker exec -it elevnn_wordmove wordmove pull -e staging -d",
    "wordmove:push-staging:database": "docker exec -it elevnn_wordmove wordmove push -e staging -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elevnnmarket/store-v1.git"
  },
  "author": "shrider.dev@gmail.com",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/elevnnmarket/store-v1/issues"
  },
  "homepage": "https://github.com/elevnnmarket/store-v1#readme",
  "release": {
    "branch": "master",
    "dryRun": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      ["@semantic-release/github", 
        {
          "successComment": "This ${issue.pull_request ? 'pull request' : 'issue'} is included in version ${nextRelease.version}",
          "failComment": "This release from branch ${branch} had failed due to the following errors:\n- ${errors.map(err => err.message).join('\\n- ')}"
        }
      ]
    ]
  }
}
